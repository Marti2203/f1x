#pragma once

#include <cstdint>

typedef std::uint_least32_t uint;


enum class Exploration {
  GENERATE_AND_VALIDATE,
  SEMANTIC_PARTITIONING
};


enum class LocalizationFormula {
  OCHIAI,
  JACCARD,
  TARANTULA  
};


enum class CandidateSelection {
  FIXED_ORDER,         // order defined by search space ordering
  PREDICATE_SWITCHING, // predicate switching for failing test
  MAX_PASSING,         // prioritize candidates that pass maximim number of tests
  LEAST_COVERED        // prioritize candidates that are evaluated with least number of tests
};


enum class TestSelection {
  FIXED_ORDER,      // failing, then passing
  MAX_FAILING,      // prioritize tests that failed maximum number of times
  LARGEST_PARTITION // prioritize tests with largest average partition size
};


const uint F1X_VERSION_MAJOR = @F1X_VERSION_MAJOR@;
const uint F1X_VERSION_MINOR = @F1X_VERSION_MINOR@;
const uint F1X_VERSION_PATCH = @F1X_VERSION_PATCH@;

const std::string F1X_CLANG_INCLUDE = "@F1X_CLANG_INCLUDE@";

const bool USE_GLOBAL_VARIABLES = false;

const bool VALIDATE_PATCHES = true;

// 0 means disabled:
const uint MAX_LOCALIZED_FILES = 0; /* UNSUPPORTED */
const uint MAX_LOCATIONS = 0; /* UNSUPPORTED */
const uint MAX_EXECUTIONS_PER_LOCATION = 0; /* UNSUPPORTED */
const uint MAX_CANDIDATES_PER_LOCATION = 0; /* UNSUPPORTED */
const uint MAX_PARAMETER_VALUE = 256; /* UNSUPPORTED */

const Exploration EXPLORATION = Exploration::SEMANTIC_PARTITIONING; /* UNSUPPORTED */

const LocalizationFormula LOCALIZATION = LocalizationFormula::JACCARD; /* UNSUPPORTED */

const bool PRIORITIZE_CONDITIONS = true; /* UNSUPPORTED */

const CandidateSelection CANDIDATE_SELECTION = CandidateSelection::FIXED_ORDER; /* UNSUPPORTED */

const TestSelection TEST_SELECTION = TestSelection::MAX_FAILING; /* UNSUPPORTED */

const std::string RUNTIME_COMPILER = "g++";
